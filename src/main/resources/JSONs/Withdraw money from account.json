{
  "testCases": [
    {
      "description": "Deposit a positive number lower than the balance",
      "input": {
        "amount": 100
      },
      "expectedOutput": {
        "success": true,
        "balance": 1100
      }
    },
    {
      "description": "Deposit a positive number greater than the balance",
      "input": {
        "amount": 2000
      },
      "expectedOutput": {
        "success": true,
        "balance": 3100
      }
    },
    {
      "description": "Deposit a negative number",
      "input": {
        "amount": -500
      },
      "expectedOutput": {
        "success": false,
        "error": "Invalid amount"
      }
    },
    {
      "description": "Deposit an empty value",
      "input": {
        "amount": ""
      },
      "expectedOutput": {
        "success": false,
        "error": "Invalid amount"
      }
    },
    {
      "description": "Deposit letters",
      "input": {
        "amount": "abc"
      },
      "expectedOutput": {
        "success": false,
        "error": "Invalid amount"
      }
    }
  ]
}
