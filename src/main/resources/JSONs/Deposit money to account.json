{
  "testCases": [
    {
      "description": "Deposit a positive number",
      "input": {
        "amount": 100
      },
      "expectedOutput": {
        "success": true
      }
    },
    {
      "description": "Deposit a negative number",
      "input": {
        "amount": -500
      },
      "expectedOutput": {
        "success": false,
        "error": "Invalid amount"
      }
    },
    {
      "description": "Deposit an empty value",
      "input": {
        "amount": ""
      },
      "expectedOutput": {
        "success": false,
        "error": "Invalid amount"
      }
    },
    {
      "description": "Deposit letters",
      "input": {
        "amount": "abc"
      },
      "expectedOutput": {
        "success": false,
        "error": "Invalid amount"
      }
    }
  ]
}
